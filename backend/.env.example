# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pitpulse
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pitpulse
DB_USER=postgres
DB_PASSWORD=your_database_password

# JWT Configuration
# Generate a strong secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-CHANGE-THIS-IN-PRODUCTION
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# In production, set this to your actual frontend/mobile app domain
# For mobile apps, you typically want to allow all origins or use a more permissive setup
CORS_ORIGIN=*
